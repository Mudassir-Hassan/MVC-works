@model SchoolDatabase.Models.MarkSheet

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>MarkSheet</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Roll_No)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Physics, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Physics)
                @Html.ValidationMessageFor(model => model.Physics)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Chemistry, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Chemistry)
                @Html.ValidationMessageFor(model => model.Chemistry)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Math, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Math)
                @Html.ValidationMessageFor(model => model.Math)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Total_Marks, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Total_Marks)
                @Html.ValidationMessageFor(model => model.Total_Marks)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
